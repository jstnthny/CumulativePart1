@model CumulativeProjectPart1.Models.Teacher

@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav style="overflow: hidden; margin-top: 5px;">
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId" style="float: left">Cancel</a>
    </nav>

    <h2>Are you sure you want to delete @Model.TeacherFname @Model.TeacherLname?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.TeacherId" style="overflow: hidden;">
        
        <button class="deletelink" style=" background: #ff0000; margin: 0 auto; display: block; color: white; border: #ff0000; padding: 5px;" href="">Confirm Delete</button>
    </form>

</div>



